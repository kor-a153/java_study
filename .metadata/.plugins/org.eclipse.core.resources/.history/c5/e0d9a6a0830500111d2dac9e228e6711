package formatTask;

	public class FormatTask02 {
	   public static void main(String[] args) {
//	      %자릿수d;
//	      %5d
	      
//	      국어점수, 영어점수, 수학점수를 받아서 서식에 맞게 출력
//	      이름: 이규학
//	      수학:    20점
//	      국어:    40점
//	      영어:    15점
//	      총점:    75점
		   String name = "";
		   int math = 0;
		   int kor = 0;
		   int eng = 0;
		   
		   name = "이규혁";
		   math = 20 ;
		   kor = 40;
		   eng = 15;
				   
		   
		   
		   
		   String name = "%s";
		   String result = "(%d + %d + %d)/3";
		   System.out.printf(name,result );
	   }
	}
}

